<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@id/myDayActivityStatus" style="@style/MyDayItemStyle.ActivityItem"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:polar="http://schemas.android.com/apk/res-auto">
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="@dimen/myday_item_activity_big_text_container_height">
        <TextView android:id="@id/myDayActivityValue" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/myday_item_activity_big_text_marginTop" android:layout_centerHorizontal="true" style="@style/MyDayItemTextStyle.Big" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/exe_view_percentage_of_max_1_row" android:layout_alignBaseline="@id/myDayActivityValue" android:layout_toEndOf="@id/myDayActivityValue" style="@style/MyDayItemTextStyle.Big.Units" />
    </RelativeLayout>
    <ProgressBar android:id="@id/myDayActivityProgress" style="@style/MyDayItemStyle.ActivityProgressBar" />
    <LinearLayout android:layout_marginTop="@dimen/myday_item_horizontal_container_first_item_marginTop" style="@style/MyDayItemStyle.HorizontalContainer">
        <fi.polar.polarflow.ui.custom.PolarGlyphView polar:glyph="@string/glyph_steps" style="@style/MyDayItemTextStyle.Glyph.Small" />
        <TextView android:id="@id/myDayActivitySteps" style="@style/MyDayItemTextStyle.Small" />
    </LinearLayout>
    <include layout="@layout/myday_item_includable_distance" />
    <include layout="@layout/myday_item_includable_calories" />
</LinearLayout>